              logData = data;
          } else {
              console.error('Dữ liệu không phải là mảng hoặc phản hồi không chứa staff:', response);
          }
      },
      error: function(err) {
          console.error('Lỗi khi gọi API:', err);
      }
  });
});

function exportToExcel(data) {
const rows = data.map(logcheckin => [
logcheckin.staff_id,
logcheckin.staff ? logcheckin.staff.name : '',
logcheckin.staff ? logcheckin.staff.email : '',
logcheckin.description,
logcheckin.created_at,
logcheckin.updated_at || 'N/A'
]);
rows.unshift(['Staff ID', 'Name', 'Email', 'Description', 'Created At', 'Updated At']);

const worksheet = XLSX.utils.aoa_to_sheet(rows);
const workbook = XLSX.utils.book_new();
XLSX.utils.book_append_sheet(workbook, worksheet, 'Log Data');
XLSX.writeFile(workbook, 'log_checkin.xlsx');
}
