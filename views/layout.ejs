  <body>
    <!-- Popup xác nhận -->
    <div id="confirmPopup" class="popup">
      <div class="popup-content">
        <h2 style="color: #dc3545">Xác nhận</h2>
        <p id="titlepopupconfirm" style="color: black"></p>
        <div class="popup-buttons">
          <button id="confirmYes" class="btn btn-success">Đồng ý</button>
          <button
            id="confirmNo"
            class="btn btn-danger"
            onclick="closePopup('confirmPopup')"
          >
            Hủy
          </button>
        </div>
      </div>
    </div>

    <!-- Popup thông báo -->
    <div id="resultPopup" class="popup">
      <div class="popup-content">
        <h2 id="resultTitle" style="color: black"></h2>
        <p id="resultMessage" style="color: rgb(139, 66, 247)"></p>
        <button id="okButton" class="btn btn-primary">OK</button>
      </div>
    </div>

