<script>
    async function callProtectedAPI() {
      const token = localStorage.getItem("token"); // Lấy token từ localStorage
    
      if (!token) {
        document.getElementById("sidebar").style.display = "none"; 
        return;
      }
    
      try {
        const response = await fetch("/api/admin/protectedRoute", {
          method: "GET",
          headers: {
            "Content-Type": "application/json",
            "Authorization": `Bearer ${token}` // Gửi token trong Authorization header
          }
        });
    
        // Nếu API trả về 200 (OK), nghĩa là người dùng có quyền truy cập
        if (response.ok) {
          const result = await response.json();
          document.getElementById("sidebar").style.display = "block"; 
          document.getElementById("user-name").innerText = result.userName; 
          document.getElementById("user-role").innerText = result.roleName; 
          const profileImage = document.getElementById('profileImage');
          profileImage.src = result.avatar;

          if(result.cms_dashboard === true){
            document.getElementById("dashboard").style.display = "block"; 
          }
          else{
            document.getElementById("dashboard").style.display = "none"; 
          }

          if(result.attendance_select === true){
            document.getElementById("attandance").style.display = "block"; 
          }
          else{
            document.getElementById("attandance").style.display = "none"; 
          }

          if(result.resume_select === true){
            document.getElementById("resume").style.display = "block"; 
          }
          else{
            document.getElementById("resume").style.display = "none"; 
          }        

          if(result.staff_select === true){
            document.getElementById("staffs").style.display = "block"; 
          }
          else{
            document.getElementById("staffs").style.display = "none"; 
          }        

          if(result.log_select === true){
            document.getElementById("log").style.display = "block"; 
          }
          else{
            document.getElementById("log").style.display = "none"; 
          }       

          if(result.setting_select === true){
            document.getElementById("setting").style.display = "block"; 
          }
          else{
            document.getElementById("setting").style.display = "none"; 
          }    

          if(result.role_select === true){
            document.getElementById("role").style.display = "block"; 
          }
          else{
            document.getElementById("role").style.display = "none"; 
          }     
             
          if(result.notification_select === true){
            document.getElementById("notification").style.display = "block"; 
          }
          else{
            document.getElementById("notification").style.display = "none"; 
          }      

        } else if (response.status === 403) {
          alert("You do not have permission to access this page.");
          localStorage.removeItem("token"); // Xóa token
          window.location.href = "/"; // Chuyển hướng về trang login
        } else {
          const result = await response.json();
          console.error(result.message);  
          alert("An unexpected error occurred.");
          window.location.href = "/"; // Chuyển hướng về trang login
        }
      } catch (error) {
        console.error("Error while accessing protected route:", error);
        alert("An error occurred. Please try again later.");
      }
    }
    
    // Chỉ tải nội dung sau khi đã xác nhận quyền truy cập
    document.addEventListener("DOMContentLoaded", callProtectedAPI);
      </script> 

